<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tr_bg_color"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tr_toolbar_height"
        android:background="@color/tr_colorPrimary">

        <TextView
            android:id="@+id/tr_back_bt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tr_dimen_30"
            android:drawableLeft="@mipmap/tr_icon_arrow_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="银联支付"
            android:textColor="@color/tr_main_text_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/tr_dimen_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/tr_dimen_20"
                    android:paddingTop="@dimen/tr_dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单金额："
                        android:textColor="@color/tr_text_main_color"
                        android:textSize="@dimen/tr_font_size_14" />

                    <TextView
                        android:id="@+id/tr_tv_good_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥10.2"
                        android:textColor="#ee4141"
                        android:textSize="@dimen/tr_font_size_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="姓名"></TextView>

                <EditText
                    android:id="@+id/tr_ed_name"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:gravity="center_vertical"
                    android:hint="请输入您的身份证姓名"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="身份证号"></TextView>

                <EditText
                    android:id="@+id/tr_ed_idno"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:hint="请输入您的身份证号码"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="银行卡号"></TextView>

                <EditText
                    android:id="@+id/tr_ed_cardno"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您的银行卡号"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="开户行"></TextView>

                <TextView
                    android:id="@+id/tr_ed_openbank"
                    android:layout_width="0.0dip"
                    android:drawableRight="@mipmap/icon_arrow_right"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择开户行"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="卡类型"></TextView>

                <TextView
                    android:id="@+id/tr_ed_cardtype"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/icon_arrow_right"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择卡类型"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tr_ll_activiedate"
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="有限期"></TextView>

                <EditText
                    android:id="@+id/tr_ed_activedate"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入有限期"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tr_ll_lastthree"
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="信用卡cvv2"></TextView>

                <EditText
                    android:id="@+id/tr_ed_lastthree"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:hint="请输入后三位"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="手机号"></TextView>

                <EditText
                    android:id="@+id/tr_ed_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_marginBottom="1.0dip"
                android:background="@color/tr_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/tr_dimen_10">

                <TextView
                    style="@style/tr_ts_common_title"
                    android:text="验证码"></TextView>

                <EditText
                    android:id="@+id/tr_ed_verifycode"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/tr_hit_text_main_color"
                    android:hint="验证码"
                    android:inputType="number"
                    android:textColor="@color/tr_text_main_color"
                    android:textSize="@dimen/tr_font_size_14"></EditText>

                <TextView
                    android:id="@+id/tr_tv_getverify"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/tr_colorPrimary"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/tr_font_size_14"
                    android:text="获取验证码"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tr_dimen_80"
                android:layout_marginTop="@dimen/tr_dimen_50"
                android:gravity="center">

                <Button
                    android:id="@+id/tr_btn_pay"
                    android:layout_marginRight="@dimen/tr_dimen_30"
                    android:layout_marginLeft="@dimen/tr_dimen_30"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/tr_bg_white"
                    android:background="@drawable/main_bg_big_red_btn_redius"
                    android:text="支付" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>