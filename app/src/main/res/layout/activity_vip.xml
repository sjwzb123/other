<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VIP权益"
            android:textColor="@color/color_151515"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f5f5f5"></View>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_vip_year"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_vip_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="包年会员99元"
            android:textColor="@drawable/tv_vip_tc"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_vip_moth"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_vip_bg"
            android:button="@null"
            android:gravity="center"
            android:text="包月会员10元"
            android:textColor="@drawable/tv_vip_tc"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_vip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@color/color_ff62ac"
        android:text="确定"
        android:textColor="@color/color_ffffff"
        android:textSize="20sp"
        android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIP享受的权益" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_vip_dis"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.开通会员可以享受会员价格" />

</LinearLayout>